<?xml version="1.0"?>
<robot name="desktop_crawler">

    <material name="blue">
        <color rgba="0 0 0.5 1" />
    </material>

    <material name="grey">
        <color rgba="0.5 0.5 0.5 1" />
    </material>

    <link name="base_footprint" />

    <link name="base_link">
        <visual>
            <geometry>
                <box size="0.7 0.5 1" />
            </geometry>
            <origin xyz="0 0 0.5" rpy="0 0 0" />
            <material name="blue" />
        </visual>
    </link>

    <link name="right_hip_link">
        <visual>
            <geometry>
                <cylinder radius="0.2" length="0.25" />
            </geometry>
            <origin xyz="0 0 0" rpy="1.57 0 0" />
            <material name="grey" />
        </visual>
    </link>

    <link name="left_hip_link">
        <visual>
            <geometry>
                <cylinder radius="0.2" length="0.25" />
            </geometry>
            <origin xyz="0 0 0" rpy="1.57 0 0" />
            <material name="grey" />
        </visual>
    </link>

    <link name="right_leg_link">
        <visual>
            <geometry>
                <cylinder radius="0.15" length="0.5" />
            </geometry>
            <origin xyz="0 0 -0.25" rpy="0 0 0" />
            <material name="blue" />
        </visual>
    </link>

    <link name="left_leg_link">
        <visual>
            <geometry>
                <cylinder radius="0.15" length="0.5" />
            </geometry>
            <origin xyz="0 0 -0.25" rpy="0 0 0" />
            <material name="blue" />
        </visual>
    </link>


    <joint name="base_joint" type="fixed">
        <parent link="base_footprint" />
        <child link="base_link" />
        <origin xyz="0 0 0.65" rpy="0 0 0"/>
    </joint>

    <joint name="right_hip_joint" type="continuous">
        <parent link="base_link" />
        <child link="right_hip_link" />
        <origin xyz="0.35 0 0" rpy="0 0 0"/>
        <axis xyz="0 -1 0" />
    </joint>

    <joint name="left_hip_joint" type="continuous">
        <parent link="base_link" />
        <child link="left_hip_link" />
        <origin xyz="-0.35 0 0" rpy="0 0 0"/>
        <axis xyz="0 1 0" />
    </joint>

    <joint name="right_leg_joint" type="fixed">
        <parent link="right_hip_link" />
        <child link="right_leg_link" />
        <origin xyz="0 0 -0.15" rpy="0 0 0"/>
    </joint>

    <joint name="left_leg_joint" type="fixed">
        <parent link="left_hip_link" />
        <child link="left_leg_link" />
        <origin xyz="0 0 -0.15" rpy="0 0 0"/>
    </joint>

</robot>